<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pongchamp.pc"
    android:versionCode="8"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<application
        android:icon="@drawable/icn_launcher"
        android:theme="@style/AppTheme"
        android:label="Pong Champ"
        android:debuggable="true"
        android:logo="@drawable/main_action_logo">
        <activity
            android:name=".MenuActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" /> 

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
        <activity
            android:name=".CreatePlayerActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
        <activity
            android:name=".RandomizeTeamsActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
        <activity
            android:name=".ChangeRulesActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
        <activity
            android:name=".ChooseTeamsActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
        <activity
            android:name=".HeadToHeadHistoryActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
        <activity
            android:name=".PlayGameActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
        <activity
            android:name=".HelpActivity"
            android:screenOrientation="portrait"
            android:label="">
        </activity>
    </application>

</manifest>